@{
    // Set the title of the page to "Expenses".
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <!-- Display the main heading of the page. -->
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3>Total Expenses $@ViewBag.Expenses</h3>
    <br />
    <!-- Create a table to display the list of expenses. -->
    <table class="table">
        <thead>
            <tr>
                <!-- Table headers for the columns. -->
                <th>
                    Id
                </th>
                <th>
                    Value
                </th>
                <th>
                    Description
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                // Iterate over each Expense item in the model and create a table row for each.
                foreach (var expense in Model)
                {
                    <tr>
                        <!-- Display the Id of the expense in a table cell. -->
                        <td>
                            @expense.Id
                        </td>
                        <!-- Display the Value of the expense in a table cell. -->
                        <td>
                            @expense.Value
                        </td>
                        <!-- Display the Description of the expense in a table cell. -->
                        <td>
                            @expense.Description
                        </td>
                        <td>
                            <a asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
